<div class="ui fluid vertical menu">
  <% @govern_taxons.each do |sibling| %>
  <div class="item">
    <%= link_to filter_params(govern_taxon_id: sibling.id), class: active_helper(id: sibling.id, active: 'header', item: nil) do %>
      <span><%= sibling.desc %></span>
    <% end %>
    <div class="<%= (sibling.child_ids + [sibling.id]).include?(params[:govern_taxon_id]) ? 'menu' : 'menu' %>">
      <% sibling.children.each do |child| %>
        <%= link_to filter_params(govern_taxon_id: child.id), class: active_helper(id: child.id) do %>
          <span><%= child.desc %></span>
        <% end %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>

