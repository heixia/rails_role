<tr id="tr_<%= govern.id %>">
  <td class="three wide">
    <%= govern.desc %>
    <%= link_to move_higher_admin_govern_path(govern), method: :patch do %>
      <i class="fas fa-arrow-up"></i>
    <% end %>
    <%= link_to move_lower_admin_govern_path(govern), method: :patch do %>
      <i class="fas fa-arrow-down"></i>
    <% end %>
  </td>
  <td class="ui labels ten wide">
    <% govern.rules.each do |rule| %>
      <div class="ui label">
        <%= rule.desc %>
        <%= link_to roles_admin_govern_rule_path(govern, rule), remote: true, id: "roles_#{rule.id}" do %>
          <i class="fas fa-users"></i>
        <% end %>
        <%= link_to edit_admin_govern_rule_path(govern, rule), remote: true do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_govern_rule_path(govern, rule), method: :delete, data: { confirm: t('.confirm') } do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </div>
    <% end %>
  </td>
  <td class="three wide">
    <%= link_to new_admin_govern_rule_path(govern), data: { tooltip: t('.new') }, remote: true, class: 'ui mini circular icon button' do %>
      <i class="fas fa-plus"></i>
    <% end %>
    <%= link_to sync_admin_govern_rules_path(govern), method: :patch, data: { tooltip: t('.sync') }, class: 'ui mini circular icon button' do %>
      <i class="fas fa-sync"></i>
    <% end %>
    <%= link_to edit_admin_govern_path(govern), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to admin_govern_path(govern), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, remote: true, class: 'ui mini circular icon button' do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </td>
</tr>
